<script>
window.onload = function() {
  function time() {
    console.log('updating');
    var d = new Date();
    document.getElementById('date').innerHTML = d;
  }
  time();
  setInterval(function(){
    time()
  }, 1000);

  getWeather();
}

function getWeather() {
  console.log('getting weather', $);
  $.ajax({
    url: "http://api.openweathermap.org/data/2.5/weather?APPID=148d53fb6725792816f85617caf28097&zip=90402,US",
  }).done(function(a, b) {
      console.log('a', a);
      console.log('b', b);
      document.getElementById('name').innerHTML = a.name;
      document.getElementById('weather').innerHTML = a.weather[0].description;

  });
}

</script>

<div class="default-page" style="padding-top: 25px; background-color: #101010;">
