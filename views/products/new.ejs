<style>
html, body, .default-page { height: 100%; color: #A4A4E4;}
h1, h2, h3, h4, h5, p { color: #118798; text-align:center; }
span { color: #A4A4E4;}
td { color: white;}

input[type="radio"], input[type="checkbox"] {
  float: left;
}
.radios {
  display: inline-block;
  width: 100%;
}
#newForm {
  padding: 50px;
  width: 400px;
  margin: 0 auto;
  margin-top: 25px;
  background: rgba(255,255,255,0.2);
}

#success {
  width: 80%;
  margin: 0 auto;
  text-align: center;
}
</style>

<script>
window.onload = function() {
  $('body').on('click', '#submit', function(e){
    e.preventDefault();
    var url = "/2/products/create";
    var form = $('#newForm').serialize();
    var errors = 0;
    $('#success').text('')

    console.log('test', $('#gen1').prop('checked'));

    if (!$('#name').val())
    {
      var current_text = $('#success').text();
      $('#success').text(current_text + " You must enter a name.");
      errors++;
    }
    if (!$('#cost').val())
    {
      var current_text = $('#success').text();
      $('#success').text(current_text + " You must enter the cost of the product.")
      errors++;
    }
    if (!$('#quant').val())
    {
      var current_text = $('#success').text();
      $('#success').text(current_text + " You must enter the quantity of the product.")
      errors++;
    }

    if ( !$('#gen1').prop('checked')  && !$('#gen2').prop('checked') && !$('#gen3').prop('checked'))
    {
      var current_text = $('#success').text();
      $('#success').text(current_text + " You must select who the product is for.")
      errors++;
    }

    if ( !$('#seas1').prop('checked')  && !$('#seas2').prop('checked') && !$('#seas3').prop('checked') && !$('#seas4').prop('checked') )
    {
      var current_text = $('#success').text();
      $('#success').text(current_text + " You must select who the product is for.")
      errors++;
    }


    if (errors) return;

    $.ajax({
      url: url,
      type: "POST",
      data:  form
    }).done(function(res, err) {
      console.log('res', res);
      console.log('');
        if (res.error) $('#success').text('There was an error saving this product.');
        else  window.location = window.location.origin + '/2/products';
        setTimeout(function(){
          $('#success').text('');
        }, 3000)
    });

    setTimeout(function(){
      $('#success').text('');
    }, 8000)

  });
  console.log('date ', new Date()  );
  $('#date').val(new Date().toISOString().substring(0, 10))

}
</script>
<%- partial('./nav') %>
<div class="default-page" style="padding-top: 25px; background-color: #101010;">
  <h1> Create A New Product  </h1>
  <p></p>
  <p id="success"></p>
  <form action="/2/products/new" method="post" id="newForm">
    <span>  Name:  </span><input type="text" id="name" placeholder="name" name="name" value="" required/>
    <br>
    <span>  Cost:  </span><input type="number" id="cost" placeholder="cost" name="cost" step="0.01" min="0" value="" required/>
    <br>
    <span>  Quantity:  </span><input type="number" id="quant" placeholder="quantity" name="quantity" step="1" min="0" value="" required/>
    <br>
    <span>  Available Starting (date) :  </span><input id="date" type="date" placeholder="startDate" name="startDate" id="date" required/>
    <br>
    <span>  Color Code:  </span><input type="color"  id="color" placeholder="color" name="color" value="" required/>
    <br>
    <div class="radios">
      <span> Whos is the product for? : </span> <br>
        <input type="radio" id="gen1" name="gender" value="male"> Male<br>
        <input type="radio" id="gen2" name="gender" value="female"> Female<br>
        <input type="radio" id="gen3" name="gender" value="other"> Both
    </div>

    <div class="radios">
      <span> What seasons is this product for? : </span> <br>

      <input type="checkbox" id="seas1" name="season" value="winter"> Winter <br>
      <input type="checkbox" id="seas2" name="season" value="spring" > Spring <br>
      <input type="checkbox" id="seas3" name="season" value="summer" > Summer <br>
      <input type="checkbox" id="seas4" name="season" value="fall" > Fall <br>

    </div>
    <input type="submit" value="Submit" id="submit">
  </form>

</div>
